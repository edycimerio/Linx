@model Web.Models.ProdutoModel

@{
    ViewData["Title"] = "AddControle";
}



<h1>Adicionar Lançamento</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddControle" method="post">
            <div class="form-group">
                <label for="Id">Id:</label>
                <input class="form-control" name="Id" disabled="true" />
            </div>
            <div class="form-group">
                <label for="Name">Nome:</label>
                <input class="form-control" name="Nome" />
            </div>
            <div class="form-group">
                <label for="de">Descrição:</label>
                <input class="form-control" name="Descricao" />
            </div>

            <div class="form-group">

                <label for="dropDown1">Categorias:</label>
                <div>
                    <select id="dropDown1" asp-for="CategoriaId" asp-items="@ViewBag.Categorias"></select>

                    <input asp-for="Perecivel" type="checkbox" />
                    <label asp-for="Perecivel" class="control-label"></label>
                    <span asp-validation-for="Perecivel" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="text-center panel-body">
                <button type="submit" class="btn btn-sm btn-primary">Salvar</button>&nbsp&nbsp <a asp-action="Index" class="btn btn-sm btn-success">Retorna</a>
            </div>
        </form>

        @if (Model != null)
        {
            <h2>Produto</h2>
            <table class="table table-sm table-striped table-bordered m-2">
                <thead><tr><th>ID</th><th>Nome</th><th>Descrição</th> <th>CategoriaId</th> <th>Ativo</th> <th>Perecivel</th></tr></thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Nome</td>
                        <td>@Model.Descricao</td>
                        <td>@Model.CategoriaId</td>
                        <td>@Model.Ativo</td>
                        <td>@Model.Perecivel</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

